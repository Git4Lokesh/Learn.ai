            border: 2px solid var(--royal-gold) !important;
            color: white !important;
            transition: all 0.3s ease;
        }

        .btn-success:hover, .btn-success:focus {
            background: linear-gradient(135deg, #34D399 0%, #10B981 100%) !important;
            transform: translateY(-2px) scale(1.02);
            box-shadow: 0 12px 30px rgba(16, 185, 129, 0.4);
        }

        .btn-light {
            background: linear-gradient(135deg, var(--royal-gold) 0%, #FCD34D 100%) !important;
            border: 2px solid var(--royal-purple) !important;
            color: var(--dark-bg) !important;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-light:hover, .btn-light:focus {
            background: linear-gradient(135deg, #FCD34D 0%, var(--royal-gold) 100%) !important;
            transform: translateY(-2px) scale(1.02);
            box-shadow: 0 12px 30px rgba(245, 158, 11, 0.4);
        }

        /* Header Badge */
        .bg-white.bg-opacity-10 {
            background: rgba(124, 58, 237, 0.2) !important;
            border: 1px solid rgba(245, 158, 11, 0.4);
            backdrop-filter: blur(10px);
        }

        /* Text Colors */
        .text-white-50 {
            color: var(--text-muted) !important;
        }

        /* Enhanced Animations */
        .btn {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .card {
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        /* Flashcard Counter */
        .rounded-pill {
            backdrop-filter: blur(15px);
            border: 1px solid rgba(245, 158, 11, 0.3) !important;
        }

        /* Mobile Responsive */
        @media (max-width: 768px) {
            .fixed-progress-bar {
                padding: 10px 0;
            }
            
            .fixed-progress-bar .col-auto:first-child {
                display: none;
            }

            .flashcard:hover {
                transform: translateY(-4px) rotateX(1deg);
            }
        }
        
        /* Print styles */
        @media print {
            .fixed-progress-bar, .success-banner {
                display: none;
            }
            
            .bg-gradient-primary {
                background: white !important;
            }
            
            .card {
                background: white !important;
                color: black !important;
            }
        }

        /* Accessibility Focus States */
        .btn:focus {
            outline: 2px solid var(--royal-gold);
            outline-offset: 2px;
        }

        /* Smooth Scrolling */
        html {
            scroll-behavior: smooth;
        }
    </style>
