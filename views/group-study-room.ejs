                fetch(`/group-study/room/${roomId}`, {
                    method: 'DELETE'
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = '/group-study';
                    } else {
                        alert(data.error || 'Error deleting room');
                    }
                });
            }
        }
        
        // WebSocket event handlers for member updates
        socket.on('member_added', (data) => {
            location.reload();
        });
        
        socket.on('member_removed', (data) => {
            if (data.userId === userId) {
                window.location.href = '/group-study';
            } else {
                location.reload();
            }
        });
        
        socket.on('member_promoted', (data) => {
            location.reload();
        });
        
        socket.on('room_deleted', () => {
            alert('Room has been deleted');
            window.location.href = '/group-study';
        });
        
        // Start synchronized session
        function startSyncedSession(contentId, contentType) {
            // Create a session for this content
            window.location.href = `/group-study/content/${contentId}/session?type=${contentType}`;
        }
        
        // View annotations
        function viewAnnotations(contentId) {
            fetch(`/group-study/content/${contentId}/annotations`)
                .then(res => res.json())
                .then(data => {
                    if (data.annotations && data.annotations.length > 0) {
                        let annotationsHtml = '<h5>Annotations</h5><ul>';
