                    } else {
                        alert(data.error || 'Error removing member');
                    }
                });
            }
        }
        
        function promoteUser(targetUserId) {
            if (confirm('Promote this user to admin?')) {
                fetch(`/group-study/room/${roomId}/promote/${targetUserId}`, {
                    method: 'POST'
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.error || 'Error promoting user');
                    }
                });
            }
        }
        
        function leaveRoomConfirm() {
            if (confirm('Are you sure you want to leave this room?')) {
                fetch(`/group-study/room/${roomId}/leave`, {
                    method: 'DELETE'
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = '/group-study';
                    } else {
                        alert(data.error || 'Error leaving room');
                    }
                });
