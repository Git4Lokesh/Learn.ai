        function joinSession(sessionId) {
            socket.emit('session_join', { sessionId, userId });
            window.location.href = `/group-study/session/${sessionId}`;
        }
        
        function startSession(sessionId) {
            fetch(`/group-study/sessions/${sessionId}/start`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Error starting session');
                }
            });
        }
        
        function endSession(sessionId) {
            if (confirm('Are you sure you want to end this session?')) {
                fetch(`/group-study/sessions/${sessionId}/end`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error ending session');
                    }
                });
            }
        }
        
        function viewSessionSummary(sessionId) {
            fetch(`/group-study/sessions/${sessionId}/summary`)
                .then(res => res.json())
                .then(data => {
                    if (data.summary) {
                        const summary = data.summary;
                        const summaryHtml = `
                            <h5>Session Summary</h5>
                            <p><strong>Title:</strong> ${summary.session.title}</p>
                            <p><strong>Duration:</strong> ${summary.duration || 'N/A'} minutes</p>
                            <p><strong>Participants:</strong> ${summary.participants}</p>
                            <p><strong>Messages:</strong> ${summary.messageCount}</p>
                        `;
                        // Show in modal or alert
                        alert(summaryHtml.replace(/<[^>]*>/g, ''));
                    }
                });
        }
        
        // Typing indicators
        let typingTimeout;
        const typingUsers = new Set();
        
        function handleTyping() {
            socket.emit('typing_start', { roomId, userId, userName: '<%= user.name %>' });
            
            clearTimeout(typingTimeout);
            typingTimeout = setTimeout(() => {
                socket.emit('typing_stop', { roomId, userId });
            }, 3000);
        }
        
        socket.on('user_typing', (data) => {
            if (data.userId !== userId) {
                typingUsers.add(data.userName);
                updateTypingIndicator();
            }
        });
        
        socket.on('user_stopped_typing', (data) => {
            typingUsers.clear();
            updateTypingIndicator();
        });
        
        function updateTypingIndicator() {
            const indicator = document.getElementById('typingIndicator');
            if (typingUsers.size > 0) {
                const names = Array.from(typingUsers).join(', ');
                indicator.textContent = `${names} ${typingUsers.size === 1 ? 'is' : 'are'} typing...`;
                indicator.style.display = 'block';
            } else {
                indicator.style.display = 'none';
            }
        }
        
        function handleChatKeyPress(e) {
            if (e.key === 'Enter') {
                sendMessage();
            }
        }
        
        // Member management
        function inviteUser() {
            const form = document.getElementById('inviteForm');
            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                const email = document.getElementById('inviteEmail').value;
                const roomId = document.getElementById('inviteRoomId').value;
                
                try {
                    const response = await fetch(`/group-study/room/${roomId}/invite`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ email })
                    });
                    
                    if (response.ok) {
                        location.reload();
                    } else {
                        const data = await response.json();
                        alert(data.error || 'Error inviting user');
                    }
                } catch (error) {
                    alert('Error inviting user');
                }
            });
        }
        
        inviteUser();
        
