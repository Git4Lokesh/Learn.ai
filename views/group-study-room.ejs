            }
        });
        
        function viewContent(contentId, contentType) {
            window.location.href = `/group-study/content/${contentId}`;
        }
        
        function editContent(contentId) {
            window.location.href = `/group-study/content/${contentId}/edit`;
        }
        
        function viewLeaderboard(contentId) {
            fetch(`/group-study/quiz/leaderboard/${contentId}`)
                .then(res => res.json())
                .then(data => {
                    if (data.leaderboard && data.leaderboard.length > 0) {
                        let html = '<h5>Leaderboard</h5><ol class="list-group list-group-numbered">';
