<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= room.name %> - Group Study</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
    <style>
        :root {
            --royal-purple: #7C3AED;
            --royal-blue: #2563EB;
            --royal-gold: #F59E0B;
            --dark-bg: #0F172A;
            --dark-card: #1E293B;
            --dark-border: #334155;
        }
        body {
            background: linear-gradient(135deg, #0F172A 0%, #1E293B 25%, #312E81 50%, #7C3AED 100%);
            min-height: 100vh;
            color: #F8FAFC;
        }
        .navbar-custom {
            background: rgba(15, 23, 42, 0.95);
            backdrop-filter: blur(20px);
            border-bottom: 2px solid var(--royal-purple);
        }
        .room-header {
            background: var(--dark-card);
            border: 2px solid var(--dark-border);
            border-radius: 16px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }
        .content-card {
            background: var(--dark-card);
            border: 2px solid var(--dark-border);
            border-radius: 12px;
            padding: 1rem;
            margin-bottom: 1rem;
        }
        .chat-container {
            height: 400px;
            overflow-y: auto;
            background: var(--dark-bg);
            border-radius: 8px;
            padding: 1rem;
        }
        .chat-message {
            margin-bottom: 1rem;
            padding: 0.75rem;
            background: var(--dark-card);
            border-radius: 8px;
        }
        .presence-indicator {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: #10B981;
            display: inline-block;
            margin-right: 0.5rem;
        }
        .presence-indicator.offline {
            background: #6B7280;
        }
        .tab-content {
            min-height: 400px;
        }
        .btn-primary {
            background: linear-gradient(135deg, var(--royal-purple) 0%, var(--royal-blue) 100%);
            border: 2px solid var(--royal-gold);
            color: white;
        }
        .form-control, .form-select {
            background-color: var(--dark-bg);
            border: 2px solid var(--dark-border);
            color: #F8FAFC;
        }
        .form-control:focus {
            border-color: var(--royal-purple);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand text-warning fw-bold" href="/group-study">
                <i class="bi bi-arrow-left me-2"></i><%= room.name %>
            </a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">
                    Room Code: <code class="bg-dark px-2 py-1 rounded"><%= room.room_code %></code>
                </span>
                <a class="nav-link text-light" href="/group-study">All Rooms</a>
            </div>
        </div>
    </nav>

    <div class="container-fluid" style="padding-top: 100px;">
        <div class="row">
            <!-- Main Content Area -->
            <div class="col-lg-8">
                <div class="room-header">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h2><i class="bi bi-door-open me-2"></i><%= room.name %></h2>
                            <% if (room.topic) { %>
                                <p class="text-muted mb-0"><i class="bi bi-book me-2"></i><%= room.topic %></p>
                            <% } %>
                        </div>
                        <div class="text-end">
                            <div class="mb-2">
                                <span class="badge bg-secondary">
                                    <i class="bi bi-people me-1"></i><%= room.members.length %> members
                                </span>
                            </div>
                            <div id="activeMembers">
                                <small class="text-muted">Active: <span id="activeCount">0</span></small>
                            </div>
                        </div>
                    </div>
                    <% if (room.description) { %>
                        <p class="text-light"><%= room.description %></p>
                    <% } %>
                </div>

                <!-- Tabs -->
                <ul class="nav nav-tabs mb-3" id="roomTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="content-tab" data-bs-toggle="tab" data-bs-target="#content" type="button">
                            <i class="bi bi-folder me-2"></i>Shared Content
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="progress-tab" data-bs-toggle="tab" data-bs-target="#progress" type="button">
                            <i class="bi bi-graph-up me-2"></i>Progress
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="sessions-tab" data-bs-toggle="tab" data-bs-target="#sessions" type="button">
                            <i class="bi bi-calendar-event me-2"></i>Sessions
                        </button>
                    </li>
                </ul>

                <div class="tab-content" id="roomTabContent">
                    <!-- Shared Content Tab -->
                    <div class="tab-pane fade show active" id="content" role="tabpanel">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4>Shared Study Materials</h4>
                            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#shareContentModal">
                                <i class="bi bi-plus-circle me-2"></i>Share Content
                            </button>
                        </div>
                        <div id="sharedContent">
                            <% if (content && content.length > 0) { %>
                                <% content.forEach(item => { %>
                                    <div class="content-card" data-content-id="<%= item.id %>">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                <h5>
                                                    <i class="bi bi-<%= item.content_type === 'quicknotes' ? 'file-text' : item.content_type === 'flashcards' ? 'card-text' : 'question-circle' %> me-2"></i>
                                                    <%= item.title || item.topic %>
                                                </h5>
                                                <small class="text-muted">
                                                    Shared by <%= item.shared_by_name %> • 
                                                    <%= new Date(item.created_at).toLocaleDateString() %>
                                                </small>
                                            </div>
                                            <span class="badge bg-info"><%= item.content_type %></span>
                                        </div>
                                        <div class="mt-3">
                                            <button class="btn btn-sm btn-outline-light" onclick="viewContent(<%= item.id %>, '<%= item.content_type %>')">
                                                <i class="bi bi-eye me-2"></i>View
                                            </button>
                                            <% if (item.content_type === 'quiz' || item.content_type === 'flashcards') { %>
                                                <button class="btn btn-sm btn-outline-success" onclick="startSyncedSession(<%= item.id %>, '<%= item.content_type %>')">
                                                    <i class="bi bi-play-circle me-2"></i>Start Session
                                                </button>
                                            <% } %>
                                            <% if (item.content_type === 'quiz') { %>
                                                <button class="btn btn-sm btn-outline-warning" onclick="viewLeaderboard(<%= item.id %>)">
                                                    <i class="bi bi-trophy me-2"></i>Leaderboard
                                                </button>
                                            <% } %>
                                            <% if (item.content_type === 'quicknotes') { %>
                                                <button class="btn btn-sm btn-outline-primary" onclick="editContent(<%= item.id %>)">
                                                    <i class="bi bi-pencil-square me-2"></i>Edit
                                                </button>
                                                <button class="btn btn-sm btn-outline-info" onclick="viewAnnotations(<%= item.id %>)">
                                                    <i class="bi bi-sticky me-2"></i>Annotations
                                                </button>
                                            <% } %>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="text-center py-5">
                                    <i class="bi bi-inbox display-4 text-muted mb-3"></i>
                                    <p class="text-muted">No shared content yet. Be the first to share!</p>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Progress Tab -->
                    <div class="tab-pane fade" id="progress" role="tabpanel">
                        <h4 class="mb-4">Group Progress Statistics</h4>
                        
                        <!-- User Streaks (loaded via API) -->
                        <div id="userStreaks" class="content-card mb-4" style="display: none;">
                            <h5><i class="bi bi-fire me-2"></i>Your Study Streak</h5>
                            <div id="streakDisplay"></div>
                        </div>
                        
                        <% if (progressStats && progressStats.length > 0) { %>
                            <div class="table-responsive mb-4">
                                <table class="table table-dark">
                                    <thead>
                                        <tr>
                                            <th>Topic/Skill</th>
                                            <th>Participants</th>
                                            <th>Avg Mastery</th>
                                            <th>Total Questions</th>
                                            <th>Accuracy</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% progressStats.forEach(stat => { %>
                                            <tr>
                                                <td><%= stat.skill_id %></td>
                                                <td><%= stat.participant_count %></td>
                                                <td><%= (stat.avg_mastery_percent || 0).toFixed(1) %>%</td>
                                                <td><%= stat.total_questions || 0 %></td>
                                                <td>
                                                    <% const accuracy = stat.total_questions > 0 ? (stat.total_correct / stat.total_questions * 100).toFixed(1) : 0 %>
                                                    <%= accuracy %>%
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                            
                            <!-- Detailed Analytics Button -->
                            <button class="btn btn-primary" onclick="loadDetailedAnalytics()">
                                <i class="bi bi-graph-up-arrow me-2"></i>View Detailed Analytics
                            </button>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="bi bi-graph-up display-4 text-muted mb-3"></i>
                                <p class="text-muted">No progress data yet. Start taking quizzes to see progress!</p>
                            </div>
                        <% } %>
                        
                        <!-- Analytics Modal will be loaded here -->
                        <div id="analyticsModalContainer"></div>
                    </div>

                    <!-- Sessions Tab -->
                    <div class="tab-pane fade" id="sessions" role="tabpanel">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4>Study Sessions</h4>
                            <div>
                                <button class="btn btn-outline-info btn-sm me-2" onclick="checkReminders()" title="Check for upcoming sessions">
                                    <i class="bi bi-bell me-2"></i>Reminders
                                </button>
                                <% if (userRole === 'owner' || userRole === 'admin') { %>
                                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#createSessionModal">
                                        <i class="bi bi-plus-circle me-2"></i>Create Session
                                    </button>
                                <% } %>
                            </div>
                        </div>
                        
                        <!-- Reminders Banner -->
                        <div id="remindersBanner" class="content-card mb-3" style="display: none; background: rgba(245, 158, 11, 0.2); border-color: var(--royal-gold);">
                            <h6><i class="bi bi-bell-fill me-2"></i>Upcoming Sessions</h6>
                            <div id="remindersList"></div>
                        </div>
                        
                        <div id="sessionsList">
                            <% if (sessions && sessions.length > 0) { %>
                                <% sessions.forEach(session => { %>
                                    <div class="content-card">
                                        <h5><%= session.title %></h5>
                                        <% if (session.description) { %>
                                            <p class="text-muted"><%= session.description %></p>
                                        <% } %>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                <i class="bi bi-calendar me-1"></i><%= new Date(session.scheduled_at).toLocaleString() %> • 
                                                <i class="bi bi-clock me-1"></i><%= session.duration_minutes %> min • 
                                                <i class="bi bi-people me-1"></i><%= session.participant_count %> participants
                                            </small>
                                            <span class="badge bg-<%= session.status === 'active' ? 'success' : session.status === 'completed' ? 'secondary' : 'info' %>">
                                                <%= session.status %>
                                            </span>
                                        </div>
                                        <% if (session.status === 'scheduled') { %>
                                            <% if (userRole === 'owner' || userRole === 'admin' || session.created_by === user.id) { %>
                                                <button class="btn btn-sm btn-success mt-2" onclick="startSession(<%= session.id %>)">
                                                    <i class="bi bi-play-circle me-2"></i>Start Session
                                                </button>
                                            <% } %>
                                            <button class="btn btn-sm btn-outline-light mt-2" onclick="joinSession(<%= session.id %>)">
                                                <i class="bi bi-check-circle me-2"></i>Join Session
                                            </button>
                                        <% } else if (session.status === 'active') { %>
                                            <a href="/group-study/session/<%= session.id %>" class="btn btn-sm btn-success mt-2">
                                                <i class="bi bi-arrow-right-circle me-2"></i>Enter Session
                                            </a>
                                            <% if (userRole === 'owner' || userRole === 'admin' || session.created_by === user.id) { %>
                                                <button class="btn btn-sm btn-danger mt-2" onclick="endSession(<%= session.id %>)">
                                                    <i class="bi bi-stop-circle me-2"></i>End Session
                                                </button>
                                            <% } %>
                                        <% } else if (session.status === 'completed') { %>
                                            <button class="btn btn-sm btn-outline-info mt-2" onclick="viewSessionSummary(<%= session.id %>)">
                                                <i class="bi bi-file-text me-2"></i>View Summary
                                            </button>
                                        <% } %>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="text-center py-5">
                                    <i class="bi bi-calendar display-4 text-muted mb-3"></i>
                                    <p class="text-muted">No study sessions scheduled yet.</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar: Chat & Members -->
            <div class="col-lg-4">
                <!-- Members List -->
                <div class="content-card mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5><i class="bi bi-people me-2"></i>Members</h5>
                        <% if (userRole === 'owner' || userRole === 'admin') { %>
                            <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#inviteModal">
                                <i class="bi bi-person-plus"></i>
                            </button>
                        <% } %>
                    </div>
                    <div id="membersList">
                        <% room.members.forEach(member => { %>
                            <div class="d-flex justify-content-between align-items-center mb-2 member-item" data-user-id="<%= member.user_id %>">
                                <div class="flex-grow-1">
                                    <span class="presence-indicator"></span>
                                    <%= member.name %>
                                    <% if (member.user_id === user.id) { %>
                                        <small class="text-muted">(You)</small>
                                    <% } %>
                                    <span class="badge bg-<%= member.role === 'owner' ? 'warning' : member.role === 'admin' ? 'info' : 'secondary' %> ms-2">
                                        <%= member.role %>
                                    </span>
                                </div>
                                <% if ((userRole === 'owner' || userRole === 'admin') && member.user_id !== user.id && member.role !== 'owner') { %>
                                    <div class="btn-group btn-group-sm">
                                        <% if (userRole === 'owner' && member.role === 'member') { %>
                                            <button class="btn btn-outline-info btn-sm" onclick="promoteUser(<%= member.user_id %>)" title="Promote to Admin">
                                                <i class="bi bi-arrow-up-circle"></i>
                                            </button>
                                        <% } %>
                                        <button class="btn btn-outline-danger btn-sm" onclick="removeMember(<%= member.user_id %>)" title="Remove">
                                            <i class="bi bi-person-x"></i>
                                        </button>
                                    </div>
                                <% } %>
                            </div>
                        <% }); %>
                    </div>
                </div>

                <!-- Chat -->
                <div class="content-card">
                    <h5><i class="bi bi-chat-dots me-2"></i>Chat</h5>
                    <div class="chat-container" id="chatMessages">
                        <% chatMessages.forEach(msg => { %>
                            <div class="chat-message">
                                <strong><%= msg.user_name %>:</strong>
                                <p class="mb-0 mt-1"><%= msg.message %></p>
                                <small class="text-muted"><%= new Date(msg.created_at).toLocaleTimeString() %></small>
                            </div>
                        <% }); %>
                    </div>
                    <div id="typingIndicator" class="text-muted small px-2" style="display: none;"></div>
                    <div class="input-group mt-3">
                        <input type="text" class="form-control" id="chatInput" placeholder="Type a message..." 
                               onkeypress="handleChatKeyPress(event)" oninput="handleTyping()">
                        <button class="btn btn-primary" onclick="sendMessage()">
                            <i class="bi bi-send"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Share Content Modal -->
    <div class="modal fade" id="shareContentModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content bg-dark text-light">
                <div class="modal-header">
                    <h5 class="modal-title">Share Content to Room</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="shareContentForm">
                        <input type="hidden" id="shareRoomId" value="<%= room.id %>">
                        <div class="mb-3">
                            <label class="form-label">Content Type</label>
                            <select class="form-select" id="shareContentType" required>
                                <option value="">Select type...</option>
                                <option value="quicknotes">Quick Notes</option>
                                <option value="flashcards">Flashcards</option>
                                <option value="quiz">Quiz</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Title</label>
                            <input type="text" class="form-control" id="shareTitle" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Topic</label>
                            <input type="text" class="form-control" id="shareTopic">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Content (JSON for flashcards/quiz, HTML for notes)</label>
                            <textarea class="form-control" id="shareContentData" rows="10" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Share</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Create Session Modal -->
    <div class="modal fade" id="createSessionModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-light">
                <div class="modal-header">
                    <h5 class="modal-title">Create Study Session</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="createSessionForm">
                        <input type="hidden" id="sessionRoomId" value="<%= room.id %>">
                        <div class="mb-3">
                            <label class="form-label">Title</label>
                            <input type="text" class="form-control" id="sessionTitle" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" id="sessionDescription" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Scheduled Date & Time</label>
                            <input type="datetime-local" class="form-control" id="sessionScheduledAt" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Duration (minutes)</label>
                            <input type="number" class="form-control" id="sessionDuration" value="60" min="15" max="480">
                        </div>
                        <button type="submit" class="btn btn-primary">Create Session</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Invite User Modal -->
    <div class="modal fade" id="inviteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-light">
                <div class="modal-header">
                    <h5 class="modal-title">Invite User to Room</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="inviteForm">
                        <input type="hidden" id="inviteRoomId" value="<%= room.id %>">
                        <div class="mb-3">
                            <label class="form-label">User Email</label>
                            <input type="email" class="form-control" id="inviteEmail" required placeholder="user@example.com">
                        </div>
                        <button type="submit" class="btn btn-primary">Send Invite</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Room Settings Modal -->
    <div class="modal fade" id="roomSettingsModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-light">
                <div class="modal-header">
                    <h5 class="modal-title">Room Settings</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <% if (userRole === 'owner') { %>
                        <div class="d-grid gap-2">
                            <button class="btn btn-danger" onclick="deleteRoomConfirm()">
                                <i class="bi bi-trash me-2"></i>Delete Room
                            </button>
                        </div>
                    <% } else { %>
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-danger" onclick="leaveRoomConfirm()">
                                <i class="bi bi-box-arrow-right me-2"></i>Leave Room
                            </button>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const socket = io();
        const roomId = <%= room.id %>;
        const userId = <%= user.id %>;
        
        // Join room socket room
        socket.emit('join_room', { roomId, userId });
        
        socket.on('joined_room', (data) => {
            console.log('Joined room:', data);
        });
        
        socket.on('members_updated', (members) => {
            document.getElementById('activeCount').textContent = members.length;
            // Update presence indicators
            const membersList = document.getElementById('membersList');
            // Could update UI here with active members
        });
        
        socket.on('chat_message', (message) => {
            const chatMessages = document.getElementById('chatMessages');
            const messageDiv = document.createElement('div');
            messageDiv.className = 'chat-message';
            messageDiv.innerHTML = `
                <strong>${message.user_name}:</strong>
                <p class="mb-0 mt-1">${message.message}</p>
                <small class="text-muted">${new Date(message.created_at).toLocaleTimeString()}</small>
            `;
            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        });
        
        socket.on('content_shared', (content) => {
            // Reload page or add content dynamically
            location.reload();
        });
        
        socket.on('leaderboard_updated', (data) => {
            console.log('Leaderboard updated:', data);
            // Could update leaderboard UI here
        });
        
        function sendMessage() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();
            if (message) {
                socket.emit('chat_message', { roomId, userId, message });
                input.value = '';
            }
        }
        
        document.getElementById('chatInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });
        
        document.getElementById('shareContentForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const roomId = document.getElementById('shareRoomId').value;
            const contentType = document.getElementById('shareContentType').value;
            const title = document.getElementById('shareTitle').value;
            const topic = document.getElementById('shareTopic').value;
            const contentData = document.getElementById('shareContentData').value;
            
            try {
                const response = await fetch(`/group-study/room/${roomId}/share`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ contentType, contentId: null, title, topic, gradeLevel: '', contentData })
                });
                
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Error sharing content');
                }
            } catch (error) {
