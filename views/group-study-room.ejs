        });
        
        // Check for session reminders
        function checkReminders() {
            fetch('/group-study/reminders')
                .then(res => res.json())
                .then(data => {
                    if (data.sessions && data.sessions.length > 0) {
                        const banner = document.getElementById('remindersBanner');
                        const list = document.getElementById('remindersList');
                        
                        let html = '<ul class="mb-0">';
                        data.sessions.forEach(session => {
                            const timeUntil = new Date(session.scheduled_at) - new Date();
                            const hours = Math.floor(timeUntil / (1000 * 60 * 60));
                            const minutes = Math.floor((timeUntil % (1000 * 60 * 60)) / (1000 * 60));
                            
                            html += `
                                <li class="mb-2">
                                    <strong>${session.title}</strong> - 
                                    ${hours > 0 ? `${hours}h ${minutes}m` : `${minutes}m`} from now
                                    <a href="/group-study/session/${session.id}" class="btn btn-sm btn-outline-light ms-2">
                                        <i class="bi bi-arrow-right"></i>
                                    </a>
                                </li>
                            `;
                        });
                        html += '</ul>';
                        
                        list.innerHTML = html;
                        banner.style.display = 'block';
                    } else {
                        alert('No upcoming sessions in the next 24 hours');
                    }
                });
        }
        
        // Auto-check reminders when sessions tab is shown
        document.getElementById('sessions-tab').addEventListener('shown.bs.tab', () => {
            checkReminders();
        });
