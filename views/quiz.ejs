            position: relative;
            overflow: hidden;
        }

        .question-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--royal-purple), var(--royal-blue), var(--royal-gold));
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .question-card:hover::before {
            opacity: 1;
        }

        .question-card:hover {
            border-color: var(--royal-gold) !important;
        }

        /* Text Colors */
        .text-primary {
            color: var(--royal-gold) !important;
        }

        .text-success {
            color: #10B981 !important;
        }

        .text-dark {
            color: var(--text-primary) !important;
        }

        .text-muted {
            color: var(--text-muted) !important;
        }

        .text-white-50 {
            color: var(--text-muted) !important;
        }

        .text-white-75 {
            color: rgba(248, 250, 252, 0.75) !important;
        }

        /* Question Text */
        .question-content {
            color: var(--text-primary) !important;
        }

        .option-text {
            color: var(--text-secondary) !important;
        }

        /* Button Styling */
        .btn-outline-primary {
            background: rgba(15, 23, 42, 0.8) !important;
            border: 2px solid var(--dark-border) !important;
            color: var(--text-secondary) !important;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        .btn-outline-primary:hover, .btn-outline-primary:focus {
            background: linear-gradient(135deg, rgba(124, 58, 237, 0.2), rgba(37, 99, 235, 0.2)) !important;
            border-color: var(--royal-gold) !important;
            color: var(--text-primary) !important;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(124, 58, 237, 0.3);
        }

        .btn-check:checked + .btn-outline-primary {
            background: linear-gradient(135deg, var(--royal-purple), var(--royal-blue)) !important;
            border-color: var(--royal-gold) !important;
            color: white !important;
            box-shadow: 0 12px 30px rgba(124, 58, 237, 0.4);
        }

        .btn-check:checked + .btn-outline-primary .option-badge {
            background: var(--royal-gold) !important;
            color: var(--dark-bg) !important;
        }

        .btn-check:checked + .btn-outline-primary .option-text {
            color: white !important;
        }

        .btn-outline-light {
            background: rgba(15, 23, 42, 0.8) !important;
            border: 2px solid var(--royal-purple) !important;
            color: var(--text-primary) !important;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        .btn-outline-light:hover, .btn-outline-light:focus {
            background: linear-gradient(135deg, var(--royal-purple), var(--royal-blue)) !important;
            border-color: var(--royal-gold) !important;
            color: white !important;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(124, 58, 237, 0.4);
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--royal-purple) 0%, var(--royal-blue) 100%) !important;
            border: 2px solid var(--royal-gold) !important;
            color: white !important;
            transition: all 0.3s ease;
        }

        .btn-primary:hover, .btn-primary:focus {
            background: linear-gradient(135deg, #8B5CF6 0%, #3B82F6 100%) !important;
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 15px 35px rgba(124, 58, 237, 0.5);
        }

        .btn-success {
            background: linear-gradient(135deg, #10B981 0%, #059669 100%) !important;
            border: 2px solid var(--royal-gold) !important;
            color: white !important;
            transition: all 0.3s ease;
        }

        /* Header Badge */
        .bg-white.bg-opacity-10 {
            background: rgba(124, 58, 237, 0.2) !important;
            border: 1px solid rgba(245, 158, 11, 0.4);
            backdrop-filter: blur(15px);
        }

        .bg-primary.bg-opacity-10 {
            background: rgba(245, 158, 11, 0.2) !important;
        }

        .bg-success.bg-opacity-10, .bg-success.bg-opacity-20 {
            background: rgba(16, 185, 129, 0.2) !important;
        }

        .bg-danger.bg-opacity-10, .bg-danger.bg-opacity-20 {
            background: rgba(239, 68, 68, 0.2) !important;
        }

        /* Question Numbers */
        .question-number {
            background: rgba(245, 158, 11, 0.2) !important;
            border: 1px solid rgba(245, 158, 11, 0.3);
        }

        /* Badges */
        .question-count-badge {
            backdrop-filter: blur(15px);
            border: 1px solid rgba(245, 158, 11, 0.3) !important;
        }

        .option-badge {
            background: rgba(245, 158, 11, 0.2) !important;
            color: var(--royal-gold) !important;
            border: 1px solid rgba(245, 158, 11, 0.3);
        }

        /* Results Page Styling */
        .success-icon {
            animation: bounceIn 0.6s ease-out;
        }

        .score-card {
            background: linear-gradient(135deg, rgba(245, 158, 11, 0.1), rgba(124, 58, 237, 0.1)) !important;
            border: 2px solid var(--royal-gold) !important;
            transition: all 0.3s ease;
        }

        .score-card:hover {
            transform: scale(1.05);
            box-shadow: 0 15px 35px rgba(245, 158, 11, 0.3);
        }

        .trophy-icon {
            color: var(--royal-gold) !important;
            animation: pulse 2s infinite;
        }

        .score-percentage {
            color: var(--royal-gold) !important;
            text-shadow: 0 0 20px rgba(245, 158, 11, 0.3);
        }

        /* Answer Review Cards */
        .answer-review-card {
            border: 1px solid var(--dark-border) !important;
            transition: all 0.3s ease;
        }

        .answer-review-card:hover {
            border-color: var(--royal-gold) !important;
            transform: translateX(5px);
        }

        .question-header {
            color: var(--royal-gold) !important;
        }

        .question-text {
            color: var(--text-primary) !important;
        }

        .correct-indicator {
            background: rgba(16, 185, 129, 0.2) !important;
            border: 1px solid rgba(16, 185, 129, 0.3);
        }

        .incorrect-indicator {
            background: rgba(239, 68, 68, 0.2) !important;
            border: 1px solid rgba(239, 68, 68, 0.3);
        }

        .correct-answer-badge {
            background: rgba(16, 185, 129, 0.2) !important;
            border: 1px solid rgba(16, 185, 129, 0.3);
        }

        .user-answer-badge {
            border: 1px solid rgba(239, 68, 68, 0.3);
        }

        /* AI Analysis Card */
        .analysis-card {
            border: 2px solid var(--royal-purple) !important;
        }

        .ai-icon {
            animation: float 3s ease-in-out infinite;
        }

        .analysis-content {
            font-size: 1.05rem;
            line-height: 1.7;
            color: var(--text-secondary) !important;
        }
        
        .analysis-content h1,
        .analysis-content h2,
        .analysis-content h3,
        .analysis-content h4,
        .analysis-content h5,
        .analysis-content h6 {
            color: var(--royal-gold) !important;
            margin: 1.5rem 0 1rem 0;
            font-weight: 600;
        }
        
        .analysis-content ul,
        .analysis-content ol {
            margin: 1rem 0;
            padding-left: 1.5rem;
        }
        
        .analysis-content li {
            margin-bottom: 0.5rem;
            color: var(--text-secondary) !important;
        }
        
        .analysis-content strong {
            color: var(--royal-gold) !important;
            font-weight: 600;
        }

        /* Action Buttons */
        .action-button {
            transition: all 0.3s ease;
        }

        .action-button:hover {
            transform: translateY(-3px);
        }

        /* Animations */
        @keyframes bounceIn {
            0% {
                transform: scale(0.3);
                opacity: 0;
            }
            50% {
                transform: scale(1.05);
            }
            70% {
                transform: scale(0.9);
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.1);
            }
            100% {
                transform: scale(1);
            }
        }

        @keyframes float {
            0% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(-10px);
            }
            100% {
                transform: translateY(0px);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in-up {
            animation: fadeInUp 0.6s ease-out forwards;
        }

        /* Submit Button */
        .submit-button {
            position: relative;
            overflow: hidden;
        }

        .submit-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .submit-button:hover::before {
            left: 100%;
        }

        /* Enhanced Focus States */
        .btn:focus {
            outline: 2px solid var(--royal-gold);
            outline-offset: 2px;
        }

        /* Mobile Responsive */
        @media (max-width: 768px) {
            .fixed-progress-bar {
                padding: 10px 0;
            }
            
            .fixed-progress-bar .col-auto:first-child {
                display: none;
            }
            
            .card-body {
                padding: 2rem !important;
            }
            
            .btn {
                font-size: 0.9rem;
            }
            
            .analysis-content {
                font-size: 1rem;
            }

            .question-card:hover {
                transform: translateY(-4px);
            }
        }
        
        /* Print styles */
        @media print {
            .fixed-progress-bar {
                display: none;
            }
            
            .bg-gradient-primary {
                background: white !important;
            }
            
            .card {
                background: white !important;
                color: black !important;
                border: 1px solid #dee2e6 !important;
                box-shadow: none !important;
            }
            
            .card-header {
                background: #f8f9fa !important;
                color: #333 !important;
            }
            
            .analysis-content h1,
            .analysis-content h2,
            .analysis-content h3,
            .analysis-content h4,
            .analysis-content h5,
            .analysis-content h6 {
                color: #333 !important;
            }

            .text-primary, .text-success, .text-dark {
                color: #333 !important;
            }
        }

        /* Smooth Scrolling */
        html {
            scroll-behavior: smooth;
        }

        /* Enhanced Button Transitions */
        .btn {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
    </style>
</body>
</html>
