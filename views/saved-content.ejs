<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Saved Content - AI Study Generator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .tiny-create-btn {
            padding: 4px 12px !important;
            font-size: 0.75rem !important;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            min-height: auto !important;
            line-height: 1.2;
        }

        .tiny-create-btn i {
            font-size: 0.75rem;
            margin-right: 4px;
        }

        .create-btn-small {
            padding: 8px 20px !important;
            font-size: 0.9rem !important;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
        }

        .create-btn-small i {
            margin-right: 6px;
        }

        /* Royal dark theme CSS */
        :root {
            --royal-purple: #7C3AED;
            --royal-blue: #2563EB;
            --royal-gold: #F59E0B;
            --dark-bg: #0F172A;
            --dark-card: #1E293B;
            --dark-border: #334155;
            --royal-gradient: linear-gradient(135deg, #0F172A 0%, #1E293B 25%, #312E81 50%, #7C3AED 100%);
            --text-primary: #F8FAFC;
            --text-secondary: #CBD5E1;
            --text-muted: #94A3B8;
        }

        .bg-gradient-primary { background: var(--royal-gradient) !important; }

        .filter-btn {
            background: rgba(15, 23, 42, 0.8) !important;
            border: 2px solid var(--royal-purple) !important;
            color: var(--text-primary) !important;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        .filter-btn:hover, .filter-btn.active {
            background: linear-gradient(135deg, var(--royal-purple), var(--royal-blue)) !important;
            border-color: var(--royal-gold) !important;
            color: white !important;
            transform: translateY(-2px);
        }

        .content-card {
            background: var(--dark-card) !important;
            border: 2px solid var(--royal-purple) !important;
            border-radius: 16px;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .content-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(124, 58, 237, 0.3) !important;
            border-color: var(--royal-gold) !important;
        }

        .content-title { color: var(--royal-gold) !important; font-weight: 600; }
        .content-meta { color: var(--text-secondary) !important; font-size: 0.9rem; }
        
        .grade-badge {
            background: linear-gradient(135deg, var(--royal-gold), #FCD34D) !important;
            color: var(--dark-bg) !important;
            font-size: 0.8rem;
            font-weight: 600;
            padding: 6px 12px;
            border-radius: 12px;
        }

        .card-count-badge {
            background: linear-gradient(135deg, var(--royal-blue), var(--royal-purple)) !important;
            color: white !important;
            font-size: 0.8rem;
            font-weight: 600;
            padding: 6px 12px;
            border-radius: 12px;
            margin-left: 8px;
        }

        .loading-spinner {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px;
            color: var(--text-muted) !important;
        }

        .welcome-state {
            text-align: center;
            padding: 80px 20px;
            color: var(--text-muted) !important;
        }

        .welcome-state i {
            font-size: 5rem;
            color: var(--royal-purple);
            margin-bottom: 2rem;
        }

        .btn-outline-light {
            background: rgba(15, 23, 42, 0.8) !important;
            border: 2px solid var(--royal-purple) !important;
            color: var(--text-primary) !important;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        .btn-outline-light:hover {
            background: linear-gradient(135deg, var(--royal-purple), var(--royal-blue)) !important;
            border-color: var(--royal-gold) !important;
            color: white !important;
            transform: translateY(-2px);
        }

        .bg-white.bg-opacity-10 {
            background: rgba(124, 58, 237, 0.2) !important;
            border: 1px solid rgba(245, 158, 11, 0.4);
        }

        .text-white-50 { color: var(--text-muted) !important; }
    </style>
</head>
<body class="bg-gradient-primary">
    <div class="container-fluid min-vh-100 py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <!-- Header -->
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <a href="/" class="btn btn-outline-light btn-lg rounded-pill px-4">
                            <i class="bi bi-arrow-left me-2"></i>
                            Back to Dashboard
                        </a>
                        <div class="text-end">
                            <small class="text-white-50 d-block">Study Library</small>
                        </div>
                    </div>

                    <!-- Title Section -->
                    <div class="text-center mb-5">
                        <div class="d-inline-flex align-items-center bg-white bg-opacity-10 rounded-pill px-4 py-2 mb-3">
                            <i class="bi bi-bookmarks text-white me-2"></i>
                            <span class="text-white fw-semibold">Saved Content</span>
                        </div>
                        <h1 class="display-5 fw-bold text-white mb-2">Your Study Library</h1>
                        <p class="text-white-50 mb-0">
                            <i class="bi bi-collection me-2"></i>
                            Select a content type to view your saved materials
                        </p>
                    </div>

                    <!-- Filter/Load Buttons -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="d-flex flex-wrap gap-2 justify-content-center">
                                <button class="btn filter-btn" onclick="loadQuickNotes()">
                                    <i class="bi bi-journal-text me-1"></i>
                                    Load Quick Notes
                                </button>
                                <button class="btn filter-btn" onclick="loadFlashcards()">
                                    <i class="bi bi-card-text me-1"></i>
                                    Load Flashcards
                                </button>
                                <button class="btn filter-btn" onclick="loadQuizzes()">
                                    <i class="bi bi-question-circle me-1"></i>
                                    Load Quizzes
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Search/Sort Bar -->
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="d-flex flex-wrap gap-2 justify-content-center">
                                <input id="searchInput" type="text" class="form-control" placeholder="Search by topic..." style="max-width: 320px; background: rgba(255,255,255,0.1); color: #fff; border-color: var(--royal-purple);">
                                <select id="sortSelect" class="form-select" style="max-width: 220px; background: rgba(255,255,255,0.1); color: #fff; border-color: var(--royal-purple);">
                                    <option value="newest">Newest first</option>
                                    <option value="oldest">Oldest first</option>
                                    <option value="topic">Topic A-Z</option>
                                </select>
                                <button class="btn btn-outline-light" onclick="applyFilters()"><i class="bi bi-funnel me-1"></i>Apply</button>
                            </div>
                        </div>
                    </div>

                    <!-- Dynamic Content Area -->
                    <div id="content-area">
                        <!-- Welcome State (Initial) -->
                        <div class="welcome-state" id="welcome-state">
                            <i class="bi bi-mouse2"></i>
                            <h3 style="color: var(--text-secondary);">Choose Content Type</h3>
                            <p>Click on a button above to load your saved study materials</p>
                        </div>
                    </div>

                    <!-- Back Button -->

                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Load Quick Notes when button is clicked
        async function loadQuickNotes() {
            const contentArea = document.getElementById('content-area');
            
            // Show loading state
            contentArea.innerHTML = `
                <div class="loading-spinner">
                    <div class="spinner-border text-primary me-3" role="status"></div>
                    <span>Loading your quick notes...</span>
                </div>
            `;

            try {
                const response = await fetch('/api/quicknotes');
                const quicknotes = await response.json();
                
                if (quicknotes.length > 0) {
                    displayQuickNotes(quicknotes);
                } else {
                    showEmptyState('No quick notes found', 'Create some quick notes to see them here!');
                }
            } catch (error) {
                console.error('Error loading quick notes:', error);
                showErrorState('Failed to load quick notes', 'loadQuickNotes');
            }
        }

        // Load Flashcards when button is clicked
        async function loadFlashcards() {
            const contentArea = document.getElementById('content-area');
            
            // Show loading state
            contentArea.innerHTML = `
                <div class="loading-spinner">
                    <div class="spinner-border text-primary me-3" role="status"></div>
                    <span>Loading your flashcards...</span>
                </div>
            `;

            try {
                const response = await fetch('/api/flashcards');
                const flashcards = await response.json();
                
                if (flashcards.length > 0) {
                    displayFlashcards(flashcards);
                } else {
                    showEmptyState('No flashcards found', 'Create some flashcards to see them here!');
                }
            } catch (error) {
                console.error('Error loading flashcards:', error);
                showErrorState('Failed to load flashcards', 'loadFlashcards');
            }
        }

        // Load Quizzes when button is clicked
        async function loadQuizzes() {
            const contentArea = document.getElementById('content-area');
            
            // Show loading state
            contentArea.innerHTML = `
                <div class="loading-spinner">
                    <div class="spinner-border text-primary me-3" role="status"></div>
                    <span>Loading your quizzes...</span>
                </div>
            `;

            try {
                const response = await fetch('/api/quiz');
                const quizzes = await response.json();
                
                if (quizzes.length > 0) {
                    displayQuizzes(quizzes);
                } else {
                    showEmptyState('No quizzes found', 'Create some quizzes to see them here!');
                }
            } catch (error) {
                console.error('Error loading quizzes:', error);
                showErrorState('Failed to load quizzes', 'loadQuizzes');
            }
        }

        // State for filters
        let currentQuicknotes = [];

        // Apply filters (search/sort)
        function applyFilters() {
            const term = (document.getElementById('searchInput').value || '').toLowerCase();
            const sort = document.getElementById('sortSelect').value;
            let data = [...currentQuicknotes];

            if (term) {
                data = data.filter(n => (n.topic || '').toLowerCase().includes(term));
            }

            if (sort === 'newest') {
                data.sort((a,b) => new Date(b.created_at) - new Date(a.created_at));
            } else if (sort === 'oldest') {
                data.sort((a,b) => new Date(a.created_at) - new Date(b.created_at));
            } else if (sort === 'topic') {
                data.sort((a,b) => (a.topic || '').localeCompare(b.topic || ''));
            }

            displayQuickNotes(data);
        }

        // Display quick notes in grid format
        function displayQuickNotes(quicknotes) {
            const contentArea = document.getElementById('content-area');
            
            let html = `<div class="row">`;
            
            quicknotes.forEach(note => {
                html += `
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="content-card p-4" onclick="viewNote(${note.id})">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <span class="grade-badge">
                                    Level : ${note.grade_level.toUpperCase()}
                                </span>
                                <button class="btn btn-sm btn-danger rounded-circle" onclick="event.stopPropagation(); deleteNote(${note.id})" style="width: 32px; height: 32px; padding: 0;">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                            <h5 class="content-title mb-3">${note.topic}</h5>
                            <div class="content-meta d-flex justify-content-between align-items-center">
                                <span>
                                    <i class="bi bi-calendar3 me-1"></i>
                                    ${new Date(note.created_at).toLocaleDateString('en-US', { 
                                        year: 'numeric', 
                                        month: 'short', 
                                        day: 'numeric' 
                                    })}
                                </span>
                                <span>
                                    <i class="bi bi-clock me-1"></i>
                                    ${new Date(note.created_at).toLocaleTimeString('en-US', { 
                                        hour: '2-digit', 
                                        minute: '2-digit' 
                                    })}
                                </span>
                            </div>
                            <div class="mt-3 d-flex gap-2">
                                <button class="btn btn-outline-light btn-sm" onclick="event.stopPropagation(); previewQuicknote(${note.id})"><i class="bi bi-eye me-1"></i>Preview</button>
                                <a class="btn btn-outline-light btn-sm" href="/export/quicknotes/${note.id}"><i class="bi bi-download me-1"></i>Export</a>
                            </div>
                        </div>
                    </div>
                `;
            });
            
            html += `</div>`;
            contentArea.innerHTML = html;
        }

        // Hook load to populate currentQuicknotes
        const originalLoadQuickNotes = loadQuickNotes;
        loadQuickNotes = async function() {
            const contentArea = document.getElementById('content-area');
            contentArea.innerHTML = `
                <div class="loading-spinner">
                    <div class="spinner-border text-primary me-3" role="status"></div>
                    <span>Loading your quick notes...</span>
                </div>
            `;
            try {
                const response = await fetch('/api/quicknotes');
                const quicknotes = await response.json();
                currentQuicknotes = Array.isArray(quicknotes) ? quicknotes : [];
                applyFilters();
            } catch (e) {
                console.error('Error loading quick notes:', e);
                showErrorState('Failed to load quick notes', 'loadQuickNotes');
            }
        }

        // Preview modal
        function previewQuicknote(id) {
            fetch(`/api/quicknotes/${id}`)
                .then(r => r.json())
                .then(note => {
                    const modalHtml = `
                        <div class="modal fade" id="previewModal" tabindex="-1">
                          <div class="modal-dialog modal-lg modal-dialog-scrollable">
                            <div class="modal-content" style="background: var(--dark-card); color: var(--text-primary); border: 2px solid var(--royal-purple)">
                              <div class="modal-header">
                                <h5 class="modal-title">${note.topic} - ${note.grade_level.toUpperCase()}</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                <div>${note.note_content}</div>
                              </div>
                              <div class="modal-footer">
                                <a class="btn btn-outline-light" href="/export/quicknotes/${note.id}"><i class="bi bi-download me-1"></i>Export HTML</a>
                                <a class="btn btn-outline-light" href="/view-quicknote/${note.id}"><i class="bi bi-box-arrow-up-right me-1"></i>Open</a>
                                <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Close</button>
                              </div>
                            </div>
                          </div>
                        </div>`;
                    const container = document.createElement('div');
                    container.innerHTML = modalHtml;
                    document.body.appendChild(container.firstElementChild);
                    const modalEl = document.getElementById('previewModal');
                    const modal = new bootstrap.Modal(modalEl);
                    modal.show();
                    modalEl.addEventListener('hidden.bs.modal', () => modalEl.remove());
                })
                .catch(err => {
                    console.error('Preview failed', err);
                    alert('Failed to load preview');
                });
        }

        // Display flashcards in grid format
        function displayFlashcards(flashcards) {
            const contentArea = document.getElementById('content-area');
            
            let html = `<div class="row">`;
            
            flashcards.forEach(flashcardSet => {
                const cardCount = Array.isArray(flashcardSet.card_content) ? flashcardSet.card_content.length : 0;
                
                html += `
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="content-card p-4" onclick="viewFlashcard(${flashcardSet.id})">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="d-flex align-items-center">
                                    <span class="grade-badge">
                                        Level : ${flashcardSet.grade_level.toUpperCase()}
                                    </span>
                                    <span class="card-count-badge">
                                        ${cardCount} Cards
                                    </span>
                                </div>
                                <button class="btn btn-sm btn-danger rounded-circle" onclick="event.stopPropagation(); deleteFlashcard(${flashcardSet.id})" style="width: 32px; height: 32px; padding: 0;">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                            <h5 class="content-title mb-3">${flashcardSet.topic}</h5>
                            <div class="content-meta d-flex justify-content-between align-items-center">
                                <span>
                                    <i class="bi bi-calendar3 me-1"></i>
                                    ${new Date(flashcardSet.created_at).toLocaleDateString('en-US', { 
                                        year: 'numeric', 
                                        month: 'short', 
                                        day: 'numeric' 
                                    })}
                                </span>
                                <span>
                                    <i class="bi bi-clock me-1"></i>
                                    ${new Date(flashcardSet.created_at).toLocaleTimeString('en-US', { 
                                        hour: '2-digit', 
                                        minute: '2-digit' 
                                    })}
                                </span>
                            </div>
                            <div class="mt-3 d-flex gap-2">
                                <a class="btn btn-outline-light btn-sm" href="/export/flashcards/${flashcardSet.id}"><i class="bi bi-download me-1"></i>Export</a>
                            </div>
                        </div>
                    </div>
                `;
            });
            
            html += `</div>`;
            contentArea.innerHTML = html;
        }

        // Display quizzes in grid format
        function displayQuizzes(quizzes) {
            const contentArea = document.getElementById('content-area');
            
            let html = `<div class="row">`;
            
            quizzes.forEach(quiz => {
                const questionCount = Array.isArray(quiz.content) ? quiz.content.length : 0;
                
                html += `
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="content-card p-4" onclick="viewQuiz(${quiz.id})">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="d-flex align-items-center">
                                    <span class="grade-badge">
                                        Level : ${quiz.grade_level.toUpperCase()}
                                    </span>
                                    <span class="card-count-badge">
                                        ${questionCount} Questions
                                    </span>
                                </div>
                                <button class="btn btn-sm btn-danger rounded-circle" onclick="event.stopPropagation(); deleteQuiz(${quiz.id})" style="width: 32px; height: 32px; padding: 0;">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                            <h5 class="content-title mb-3">${quiz.topic}</h5>
                            <div class="content-meta d-flex justify-content-between align-items-center">
                                <span>
                                    <i class="bi bi-calendar3 me-1"></i>
                                    ${new Date(quiz.created_at).toLocaleDateString('en-US', { 
                                        year: 'numeric', 
                                        month: 'short', 
                                        day: 'numeric' 
                                    })}
                                </span>
                                <span>
                                    <i class="bi bi-clock me-1"></i>
                                    ${new Date(quiz.created_at).toLocaleTimeString('en-US', { 
                                        hour: '2-digit', 
                                        minute: '2-digit' 
                                    })}
                                </span>
                            </div>
                            <div class="mt-3 d-flex gap-2">
                                <a class="btn btn-outline-light btn-sm" href="/export/quiz/${quiz.id}"><i class="bi bi-download me-1"></i>Export</a>
                            </div>
                        </div>
                    </div>
                `;
            });
            
            html += `</div>`;
            contentArea.innerHTML = html;
        }

        // Show empty state
        function showEmptyState(title, message) {
            const contentArea = document.getElementById('content-area');
            contentArea.innerHTML = `
                <div class="welcome-state">
                    <i class="bi bi-bookmark-x"></i>
                    <h3 style="color: var(--text-secondary);">${title}</h3>
                    <p>${message}</p>
                </div>
            `;
        }

        // Show error state
        function showErrorState(message, retryFunction) {
            const contentArea = document.getElementById('content-area');
            contentArea.innerHTML = `
                <div class="welcome-state">
                    <i class="bi bi-exclamation-triangle" style="color: #EF4444;"></i>
                    <h3 style="color: var(--text-secondary);">Error</h3>
                    <p>${message}</p>
                    <button class="btn btn-outline-light btn-lg rounded-pill mt-3" onclick="${retryFunction}()">
                        <i class="bi bi-arrow-clockwise me-2"></i>
                        Try Again
                    </button>
                </div>
            `;
        }

        // View individual note
        function viewNote(id) {
            window.location.href = `/view-quicknote/${id}`;
        }

        // View individual flashcard set
        function viewFlashcard(id) {
            window.location.href = `/view-flashcards/${id}`;
        }

        // View individual quiz
        function viewQuiz(id) {
            window.location.href = `/view-quiz/${id}`;
        }

        // Delete note
        function deleteNote(id) {
            if (confirm('Are you sure you want to delete this note? This action cannot be undone.')) {
                fetch(`/delete-content/quicknotes/${id}`, {
                    method: 'DELETE',
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        loadQuickNotes(); // Reload the content
                    } else {
                        alert('Failed to delete note');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to delete note');
                });
            }
        }

        // Delete flashcard set
        function deleteFlashcard(id) {
            if (confirm('Are you sure you want to delete this flashcard set? This action cannot be undone.')) {
                fetch(`/delete-content/flashcards/${id}`, {
                    method: 'DELETE',
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        loadFlashcards(); // Reload the content
                    } else {
                        alert('Failed to delete flashcard set');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to delete flashcard set');
                });
            }
        }

        // Delete quiz
        function deleteQuiz(id) {
            if (confirm('Are you sure you want to delete this quiz? This action cannot be undone.')) {
                fetch(`/delete-content/quiz/${id}`, {
                    method: 'DELETE',
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        loadQuizzes(); // Reload the content
                    } else {
                        alert('Failed to delete quiz');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to delete quiz');
                });
            }
        }
    </script>
</body>
</html>
